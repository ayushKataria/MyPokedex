<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.akat2.mypokedex">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_pokedex"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_pokedex"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.PokemonListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.PokemonDetailActivity"></activity>
    </application>

</manifest>